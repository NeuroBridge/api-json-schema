{
  "$id": "https://neurobridge.org/query.schema.json",
  "type": "object",
  "definitions": {
    "term": {
      "type": "string",
      "minLength": 1
    },
    "expression": {
      "oneOf": [
        { "$ref": "#/definitions/term" },
        { "$ref": "#" }
      ]
    },
    "operator": {
      "type": "string",
      "enum": ["and", "or", "not"]
    },
    "arguments": {
      "type": "array",
      "items": { 
        "$ref": "#/definitions/expression"
      },
      "if": {
        "properties": {
          "operator": {
            "pattern": "^(and|or)$"
          }
        }
      },
      "then": { "minItems": 2, "maxItems": 2 },
      "else": { "minItems": 1, "maxItems": 1 }
    }
  },
  "required": ["operator", "arguments"],
  "properties": {
    "operator": { "$ref": "#/definitions/operator" },
    "arguments": { "$ref": "#/definitions/arguments" }
  }
}
