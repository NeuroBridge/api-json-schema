{
  "$id": "https://neurobridge.org/query.schema.json",
  "type": "object",
  "definitions": {
    "term": {
      "type": "string",
      "minLength": 1
    },
    "expression": {
      "oneOf": [
        { "$ref": "#/definitions/term" },
        { "$ref": "#" }
      ]
    },
    "operator": {
      "type": "string",
      "enum": ["and", "or", "not"]
    },
    "arguments": {
      "type": "array",
      "items": { 
        "$ref": "#/definitions/expression"
      }
    }
  },
  "required": ["operator", "arguments"],
  "properties": {
    "operator": { "$ref": "#/definitions/operator" },
    "arguments": { "$ref": "#/definitions/arguments" }
  },
  "if": {
    "properties": {
      "operator": {
        "type": "string",
        "pattern": "^(and|or)$"
      }        
    }
  },
  "then": {
    "properties": {
      "arguments": {
        "minItems": 2,
        "maxItems": 2,
        "type": "array"
      }
    }
  },
  "else": {
    "properties": {
      "arguments": {
        "minItems": 1,
        "maxItems": 1,
        "type": "array"
      }
    }
  }
}
